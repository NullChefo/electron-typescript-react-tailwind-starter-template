{
  "name": "electron-react-tailwind-typescript-starter-template",
  "version": "1.0.0",
  "description": "Electron template",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "lint": "cross-env NODE_ENV=development eslint",
    "format": "prettier --ignore-path .eslintignore --write",
    "prepare": "husky install .config/husky",
    "create-icons": "electron-icon-builder --input=./assets/package/source.png --output=./assets/package",
    "package:mac": "electron-forge package --platform darwin",
    "package:linux": "electron-forge package --platform linux",
    "package:win": "electron-forge package --platform win32",
    "make:mac": "electron-forge make --platform darwin",
    "make:linux": "electron-forge make --platform linux",
    "make:win": "electron-forge make --platform win32",
    "publish:mac": "electron-forge publish --platform darwin",
    "publish:linux": "electron-forge publish --platform linux",
    "publish:win": "electron-forge publish --platform win32"
  },
  "keywords": [],
  "license": "MIT",
  "config": {
    "forge": "./.config/forge.config.js",
    "commitizen": {
      "path": "cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "singleQuote": false
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn prettier"
    ],
    "{*.json,.{eslintrc,prettierrc}}": [
      "yarn prettier"
    ],
    "*.{css,scss}": [
      "yarn prettier"
    ],
    "*.{html,md,yml}": [
      "yarn prettier"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-react": "^7.16.7",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "@types/node": "^18.0.1",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "@zauberware/eslint-config": "^0.1.16",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.5",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.1",
    "electron": "19.0.11",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.19.0",
    "eslint-import-resolver-typescript": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.7.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.4",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-persist-secure": "^1.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0"
  }
}
